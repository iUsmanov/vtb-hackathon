		"pret": "prettier --check **/*.{ts,tsx,js,json}",
		"pret:fix": "prettier --write **/*.{ts,tsx,js,json}",
		"prepare": "husky install",
		"generate:slice": "node ./scripts/createSlice/index.js",
		"postinstall": "node ./scripts/clear-cache.js"
	},
